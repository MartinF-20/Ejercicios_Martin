<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio5.MainPage">

    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
                <Label Text="Bienvenido a Xamarin Forms" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
            </Frame>
            <Label Text="Comienza a desarrollar ahora" FontSize="Title" Padding="30,10,30,10"/>
            <Label Text="Make changes to your XAML file and save to see your UI update in the running app with XAML Hot Reload. Give it a try!" FontSize="16" Padding="30,0,30,0"/>

            <Editor x:Name="entrada" Placeholder="Captura tu nota..." HeightRequest="100"> 
            </Editor>
            <Grid ColumnDefinitions="*,*">
                <Button
                Text="Guardar"
                Clicked="Button_Clicked">
                </Button>

                <Button Grid.Column="1"
                        Text="Borrar"
                        Clicked="Button_Clicked_1">
                    
                </Button>

            </Grid>
            
        </StackLayout>
    </ContentPage.Content>
    

</ContentPage>
